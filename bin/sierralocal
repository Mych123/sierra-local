#!/usr/bin/python3

# -*- coding: utf-8 -*-
import re
import sys

from sierralocal import main

if __name__ == '__main__':
    sys.argv[0] = re.sub(r'(-script\.pyw?|\.exe)?$', '', sys.argv[0])
    try:
        exit_code = main.main()
    except AttributeError:
        exit_code = main()  # I have no idea why this works - main is a module
    sys.exit(exit_code)
